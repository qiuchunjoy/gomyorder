<h1>Add User</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
  <div class="form-group">
    <label>name</label>
    <input type="text" name="name" class="form-control" placeholder="Add name">
  </div>
  <div class="form-group">
    <label>Takeout Name</label>
    <input type="text" name="takeout_name" class="form-control" placeholder="Takeout Name">
  </div>
  <div class="form-group">
    <label>Money</label>
    <input type="text" name="money" class="form-control" placeholder="Money">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>
